# $Id: PKGBUILD 289043 2017-02-16 09:39:56Z arojas $
# Maintainer: Antonio Rojas <arojas@archlinux.org>
# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=qjson-qt5
_pkgname=qjson
pkgver=0.9.0
pkgrel=2
pkgdesc="A Qt5-based library that maps JSON data to QVariant objects"
arch=(i686 x86_64)
license=(GPL)
url="http://qjson.sourceforge.net"
depends=(qt5-base)
#conflicts=(qjson)
#replaces=(qjson)
#provides=(qjson)
makedepends=(cmake)
source=($pkgname-$pkgver.tar.gz::"https://github.com/flavio/qjson/archive/$pkgver.tar.gz")
sha256sums=('e812617477f3c2bb990561767a4cd8b1d3803a52018d4878da302529552610d4')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../${pkgname%-*}-$pkgver \
    -DCMAKE_INSTALL_PREFIX=/opt \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
